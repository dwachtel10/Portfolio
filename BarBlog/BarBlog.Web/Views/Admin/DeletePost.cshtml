@model BarBlog.Models.Post
@{
    ViewBag.Title = "DeletePost";
}

<h2>Delete Post</h2>

<div class="row">
    <h2>Delete Post</h2>
    <div class="col-xs-12 col-sm-7">
        <div class="panel panel-primary">
            @using (Html.BeginForm("DeletePost", "Admin", null, FormMethod.Post, new { id = "postform" }))
            {
                @Html.HiddenFor(p => p.PostID)
                <div class="panel-heading">
                    <h4 class="panel-title">Do you really want to delete the post titled "@Model.PostTitle"?</h4>
                </div>
                <div class="panel-body">
                   
                    <button type="submit" class="btn btn-primary">Delete "@Model.PostTitle"</button>
                    @Html.ActionLink("Cancel", "Index", "Home", null, new {@class = "btn btn-sm btn-info"})
                </div>
            }

        </div>
    </div>
</div>