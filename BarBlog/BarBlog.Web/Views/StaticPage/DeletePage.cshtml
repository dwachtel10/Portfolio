@model BarBlog.Models.StaticPage
@{
    ViewBag.Title = "DeletePage";
}

<h2>Delete Page</h2>

<div class="row">
    <h2>Delete Post</h2>
    <div class="col-xs-12 col-sm-7">
        <div class="panel panel-primary">
            @using (Html.BeginForm("DeletePage", "StaticPage", null, FormMethod.Post, new { id = "pageform" }))
            {
                @Html.HiddenFor(p => p.PageID)
                <div class="panel-heading">
                    <h4 class="panel-title">Do you really want to delete the post titled "@Model.PageTitle"?</h4>
                </div>
                <div class="panel-body">
                    <button type="submit" class="btn btn-primary">Delete "@Model.PageTitle"</button>
                    @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-sm btn-info" })
                </div>
            }
        </div>
    </div>
</div>