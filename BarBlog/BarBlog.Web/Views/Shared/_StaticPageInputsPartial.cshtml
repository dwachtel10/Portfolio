@model BarBlog.Models.StaticPage


<div id="pageform">
    <div class="panel panel-primary">
        <div class="panel-heading">
            Static Page
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m => m.PageTitle)
                @Html.TextBoxFor(m => m.PageTitle)
                @Html.ValidationMessageFor(m => m.PageTitle)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PageBody)
                @Html.TextAreaFor(m => m.PageBody, new { id = "tinyMCE" })
                @Html.ValidationMessageFor(m => m.PageBody)
            </div>
        </div>
        <button type="submit" class="btn btn-sm btn-secondary" id="savepost">Save</button>
    </div>
</div>