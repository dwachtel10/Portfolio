@model BarBlog.Models.Tag
@{
    ViewBag.Title = "EditTag";
}

<div class="row">
    @using (Html.BeginForm("EditTag", "Tag", null, FormMethod.Post, new { id = "tagform" }))
    {
        @Html.HiddenFor(m => m.TagID);
        @Html.TextBoxFor(m => m.TagName, new { @class = "form-control" })
        @Html.ActionLink("Cancel", "TagIndex", "Tag", null, new { @class = "btn btn-sm btn-primary" })
        <button type="submit" class="btn btn-secondary" id="savepost">Save</button>
    }
</div>

